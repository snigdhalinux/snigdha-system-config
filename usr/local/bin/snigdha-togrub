#!/bin/bash
#set -e

# Author    : Erik Dubois
# Website   : https://www.erikdubois.be

echo "###############################################################################"
echo "Reinstalling the default grub for Snigdha OS"
echo "###############################################################################"

Online=0
file_boolean=0

function check_connectivity() {

    local test_ip
    local test_count

    test_ip="8.8.8.8"
    test_count=1

    if ping -c ${test_count} ${test_ip} > /dev/null; then
       echo "You have internet connectivity"
       Online=1
    else
       echo "You do not have connectivity"
       Online=0
    fi
 }

function check_file() {

	file="/usr/local/share/snigdha/grub/grub"
	if [[ -f $file ]];then
    	echo $file " exists"
    	file_boolean=1
	else
    	echo $file " doesn't exist"
    	file_boolean=0
	fi
}

check_connectivity
check_file


# pacman config + online
if [ $Online -eq 1 ] ; then
	echo "getting latest /etc/default/grub from github"
	sudo wget https://raw.githubusercontent.com/snigdhalinux/snigdhaos-archiso/master/archiso/airootfs/etc/default/grub -O $workdir/etc/default/grub
fi

# pacman config + not online
if [ $Online -eq 0 ] && [ $file_boolean -eq 1 ] ; then
	sudo cp /usr/local/share/snigdha/grub/grub /etc/default/grub
	echo "getting latest /etc/default/grub from local system"
fi

#putting old pacman config back
if [ $Online -eq 0 ]  && [ $file_boolean -eq 0 ] ; then
	echo "Run this script once you are back online"
fi

# removing this package intended for use with systemd-boot
sudo pacman -R --noconfirm kernel-install-mkinitcpio

echo
echo "###############################################################################"
echo "###    Updating your /boot/grub/grub.cfg to apply the grub default file    ####"
echo "###    Make sure you installed snigdha-grub-theme			                 ####"
echo "###    to see the default Snigdha OS grub theme again                      ####"
echo "###############################################################################"
echo

sudo grub-install --target=x86_64-efi --efi-directory=/boot/efi --bootloader-id=Snigdha

sudo grub-mkconfig -o /boot/grub/grub.cfg

echo
echo "###############################################################################"
echo "###    Make sure you installed snigdha-grub-theme			                 ####"
echo "###    to see the default Snigdha OS grub theme again                      ####"
echo "###                DONE - YOU CAN CLOSE THIS WINDOW                        ####"
echo "###############################################################################"
